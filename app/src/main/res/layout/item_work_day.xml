<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingBottom="@dimen/activity_vertical_margin">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:id="@+id/date"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:text="Entry"
		android:id="@+id/label_enter_time"
		android:layout_below="@+id/date"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_marginRight="8dp"
		android:layout_marginEnd="8dp" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:id="@+id/leave_time"
		android:layout_alignBottom="@+id/label_enter_time"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:id="@+id/enter_time"
		android:layout_alignBottom="@+id/label_enter_time"
		android:layout_toRightOf="@+id/label_enter_time"
		android:layout_toEndOf="@+id/label_enter_time" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:text="Left"
		android:id="@+id/label_leave_time"
		android:layout_marginRight="8dp"
		android:layout_marginEnd="8dp"
		android:layout_alignBottom="@+id/leave_time"
		android:layout_toLeftOf="@+id/leave_time"
		android:layout_toStartOf="@+id/leave_time" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:text="Work"
		android:id="@+id/label_work_time"
		android:layout_below="@+id/label_enter_time"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_marginRight="8dp"
		android:layout_marginEnd="8dp" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:id="@+id/pause_time"
		android:layout_alignBottom="@+id/label_work_time"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:id="@+id/work_time"
		android:layout_alignBottom="@+id/label_work_time"
		android:layout_toRightOf="@+id/label_work_time"
		android:layout_toEndOf="@+id/label_work_time" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:text="Pause"
		android:id="@+id/label_pause_time"
		android:layout_marginRight="8dp"
		android:layout_marginEnd="8dp"
		android:layout_alignBottom="@+id/pause_time"
		android:layout_toLeftOf="@+id/pause_time"
		android:layout_toStartOf="@+id/pause_time" />
</RelativeLayout>